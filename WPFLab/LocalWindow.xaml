<Window x:Uid="LocalWindow" x:Class="WPFLab.LocalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LocalWindow" Height="300" Width="300"
        SizeToContent="WidthAndHeight">
    <StackPanel x:Uid="StackPanel_1" Margin="10">
        <TextBlock x:Uid="TextBlock_1" Margin="10">One line of text.</TextBlock>
        <Button x:Uid="cmdDoSomething" Name="cmdDoSomething" Margin="10" Padding="3">A button</Button>
        <TextBlock x:Uid="TextBlock_2" Margin="10">This is another line of text.</TextBlock>
    </StackPanel>
</Window>
